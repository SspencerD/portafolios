---
// Importar el layout principal
import Layout from '../layouts/Layout.astro';
import ContactMe from './contact-me.astro';
import Experience from './experience.astro';
import Home from './home.astro';
import MyGuarantee from './my-guarantee.astro';
import Projects from './projects.astro';
---

<Layout>
  <section id="home" class="flex items-start justify-start min-h-screen mt-[36px]">
    <Home/>
  </section>
  <section id="experience" class="flex items-center justify-center min-h-screen">
   <Experience/>
  </section>
  <section id="projects" class="flex items-center justify-center min-h-[54vh]">
  <Projects />
  </section>
  <section id="about-me" class="flex items-center justify-center min-h-[54vh]">
    <MyGuarantee />
  </section>
  <section id="contact" class="flex items-center justify-center min-h-screen">
   <ContactMe />
  </section>
</Layout>
